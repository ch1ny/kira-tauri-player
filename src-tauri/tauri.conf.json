{
	"build": {
		"beforeDevCommand": "yarn dev",
		"beforeBuildCommand": "yarn build",
		"devPath": "http://localhost:1420",
		"distDir": "../dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "kira-player",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": true,
			"fs": {
				"all": true,
				"copyFile": true,
				"createDir": true,
				"exists": true,
				"readDir": true,
				"readFile": true,
				"removeDir": true,
				"removeFile": true,
				"renameFile": true,
				"scope": ["**"],
				"writeFile": true
			},
			"protocol": {
				"all": true,
				"asset": true,
				"assetScope": ["**"]
			}
		},
		"bundle": {
			"active": true,
			"category": "DeveloperTool",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "HanshinKira.KiraPlayer.tauri",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": "",
				"wix": {
					"template": "./kira_player.wxs",
					"language": "zh-CN"
				}
			}
		},
		"cli": {
			"args": [
				{
					"name": "mediaPath",
					"description": "播放的媒体文件",
					"index": 1,
					"takesValue": true
				}
			]
		},
		"security": {
			"csp": "default-src 'self' style-src 'self' 'unsafe-inline'; img-src 'self' asset: https://asset.localhost; media-src 'self' asset: https://asset.localhost blob:; script-src 'self' https://cdn.jsdelivr.net/npm/ https://cdnjs.cloudflare.com/ajax/libs/dashjs/; connect-src 'self' asset: https://asset.localhost;"
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"width": 1000,
				"height": 650,
				"resizable": true,
				"title": "Kira Player",
				"center": true,
				"visible": false,
				"label": "main"
			}
		]
	}
}
